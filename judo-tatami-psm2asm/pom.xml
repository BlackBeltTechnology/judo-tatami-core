<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>hu.blackbelt.judo.tatami</groupId>
        <artifactId>judo-tatami-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../judo-tatami-parent</relativePath>
    </parent>

    <artifactId>judo-tatami-psm2asm</artifactId>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>hu.blackbelt</groupId>
                <artifactId>unpack-artifact-maven-plugin</artifactId>
                <version>1.0.0</version>
                <executions>
                    <execution>
                        <id>copy-psm-scripts</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>

                        <configuration>
                            <outDirectory>${basedir}/src/main</outDirectory>
                            <artifacts>
                                <artifact>
                                    <groupId>hu.blackbelt.judo.meta</groupId>
                                    <artifactId>judo-meta-psm-runtime</artifactId>
                                    <version>${judo-meta-psm.version}</version>
                                    <resources>
                                        <resource>
                                            <source>judo/psm/operations</source>
                                            <destination>operations/psm</destination>
                                        </resource>
                                    </resources>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <obrRepository>NONE</obrRepository>
                    <instructions>
                        <Export-Package>
                            tatami/psm2asm;version=${project.version},
                            hu.blackbelt.judo.tatami.psm.asm.*;version=${project.version}
                        </Export-Package>
                        <Include-Resource>
                            tatami/psm2asm/operations=src/main/operations,
                            tatami/psm2asm/transformations=src/main/transformations
                        </Include-Resource>

                        <Import-Package>
                            !lombok,
                            meta/psm;version="${judo-meta-psm.import-range}",
                            meta/asm;version="${judo-meta-asm.import-range}",
                            hu.blackbelt.judo.meta.psm*;version="${judo-meta-psm.import-range}",
                            hu.blackbelt.judo.meta.asm*;version="${judo-meta-asm.import-range}",
                            com.google.common.base;version="[14.0,30)",
                            com.google.common.cache;version="[14.0,30)",
                            com.google.common.collect;version="[14.0,30)",
                            com.google.common.io;version="[14.0,30)",
                            com.google.common.primitives;version="[14.0,30)",
                            com.google.common.hash;version="[14.0,30)",
                            com.google.common.util.concurrent;version="[14.0,30)",
                            javax.annotation;version="[1.0,2)",
                            *
                        </Import-Package>
                        <Asm-Meta-Version-Range>${judo-meta-psm.import-range}</Asm-Meta-Version-Range>
                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>hu.blackbelt.judo.meta</groupId>
            <artifactId>judo-meta-psm-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>hu.blackbelt.judo.meta</groupId>
            <artifactId>judo-meta-asm</artifactId>
        </dependency>
        <dependency>
            <groupId>hu.blackbelt.judo.tatami</groupId>
            <artifactId>judo-tatami-core</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>psm2asm-development</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-psm-md5</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>${test.psm.model.groupId}</groupId>
                                            <artifactId>${test.psm.model.artifactId}</artifactId>
                                            <version>${test.psm.model.version}</version>
                                            <type>md5</type>
                                            <classifier>psm</classifier>
                                            <overWrite>false</overWrite>
                                            <outputDirectory>${project.build.directory}</outputDirectory>
                                            <destFileName>psm.md5</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.gmaven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>read-psm-md5</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <properties>
                                        <header_file>${project.build.directory}/psm.md5</header_file>
                                    </properties>
                                    <source>
                                        def file = new File(project.properties.header_file)
                                        project.properties.psmversion = file.getText()
                                    </source>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>hu.blackbelt.epsilon</groupId>
                        <artifactId>epsilon-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <metaModels>
                                        <metaModel>
                                            mvn:hu.blackbelt.judo.meta:judo-meta-psm-model:ecore:psm:${judo-meta-psm.version}
                                        </metaModel>
                                    </metaModels>

                                    <models>
                                        <model>
                                            <artifact>
                                                mvn:${test.psm.model.groupId}:${test.psm.model.artifactId}:model:psm:${test.psm.model.version}
                                            </artifact>
                                            <name>SRC</name>
                                            <aliases>
                                                <alias>JUDOPSM</alias>
                                            </aliases>
                                            <metaModelUris>
                                                <param>http://blackbelt.hu/judo/meta/psm/namespace</param>
                                                <param>http://blackbelt.hu/judo/meta/psm/type</param>
                                                <param>http://blackbelt.hu/judo/meta/psm/data</param>
                                                <param>http://blackbelt.hu/judo/meta/psm/derived</param>
                                                <param>http://blackbelt.hu/judo/meta/psm/measure</param>
                                                <param>http://blackbelt.hu/judo/meta/psm/service</param>
                                            </metaModelUris>
                                            <expand>true</expand>
                                        </model>
                                        <model>
                                            <artifact>mvn:hu.blackbelt.judo.meta:judo-meta-asm:ecore:types:${judo-meta-asm.version}</artifact>
                                            <name>TYPES</name>
                                            <metaModelUris>
                                                <param>http://www.eclipse.org/emf/2002/Ecore</param>
                                            </metaModelUris>
                                            <platformAlias>http://blackbelt.hu/judo/asm/types</platformAlias>
                                        </model>
                                        <model>
                                            <artifact>mvn:hu.blackbelt.judo.meta:judo-meta-asm:ecore:base:${judo-meta-asm.version}</artifact>
                                            <name>BASE</name>
                                            <metaModelUris>
                                                <param>http://www.eclipse.org/emf/2002/Ecore</param>
                                            </metaModelUris>
                                            <platformAlias>http://blackbelt.hu/judo/asm/base</platformAlias>
                                        </model>
                                        <model>
                                            <artifact>${project.build.directory}/asm.model</artifact>
                                            <name>ASM</name>
                                            <readOnLoad>false</readOnLoad>
                                            <storeOnDisposal>true</storeOnDisposal>
                                            <metaModelUris>
                                                <param>http://www.eclipse.org/emf/2002/Ecore</param>
                                            </metaModelUris>
                                        </model>
                                    </models>
                                    <eolPrograms>
                                        <Etl>
                                            <source>${basedir}/src/main/transformations/asm/psmToAsm.etl</source>
                                            <parameters>
                                                <parameter>
                                                    <name>modelName</name>
                                                    <value>${test.psm.model.artifactId}</value>
                                                </parameter>
                                                <parameter>
                                                    <name>nsURI</name>
                                                    <value>http://blackbelt.hu/judo/meta/asm</value>
                                                </parameter>
                                                <parameter>
                                                    <name>nsPrefix</name>
                                                    <value>rt</value>
                                                </parameter>
                                                <parameter>
                                                    <name>extendedMetadataURI</name>
                                                    <value>http://blackbelt.hu/judo/meta/ExtendedMetadata</value>
                                                </parameter>
                                            </parameters>
                                        </Etl>
                                    </eolPrograms>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>add-resource</id>
                                <goals>
                                    <goal>add-resource</goal>
                                </goals>

                                <configuration>
                                    <resources>
                                        <resource>
                                            <directory>src/operations</directory>
                                        </resource>
                                        <resource>
                                            <directory>src/transformations</directory>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>

                            <execution>
                                <id>attach-asm-model</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>attach-artifact</goal>
                                </goals>
                                <configuration>
                                    <artifacts>
                                        <artifact>
                                            <file>${project.build.directory}/asm.model</file>
                                            <type>model</type>
                                            <classifier>asm</classifier>
                                        </artifact>
                                    </artifacts>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>

        </profile>
    </profiles>

</project>
