{{~ log 'Date field generation for' (variable application.name) '-' (fqClass page.name)'page'(variable page.dataElement.target.name) attributeType.name level='debug' ~}}
{{#if page.isPageTypeView}}
Observer(
    builder: (_) => JudoDateInput(
        key: UniqueKey(),
        col: {{ multiplyCol col }},
        row: {{ row }},
        disabled: {{ disabled }},
        use24HourFormat: true,
        initialDate: target{{ className page.dataElement.target.name }}Store.{{ attributeType.name }},
        label: '{{ label }}',
        icon: Icon(Icons.{{ this.leadingIcon.name }}),
        readOnly: true,
    ),
),
{{/if}}
{{#if page.isPageTypeCreate}}
Observer(
    builder: (_) => JudoDateInput(
        key: inputWidgetKeyMap['{{ name }}'],
        col: {{ multiplyCol col }},
        row: {{ row }},
        disabled: {{ disabled }},
        initialDate: target{{ className page.dataElement.target.name }}Store.{{ attributeType.name }},
        label: '{{ label }}',
        icon: Icon(Icons.{{ this.leadingIcon.name }}),
        onChanged: (value) => target{{ className page.dataElement.target.name }}Store.set{{ className attributeType.name }}(value),
        firstDate: DateTime(DateTime.now().year - 5), // TODO: revisit this line
        lastDate: DateTime(DateTime.now().year + 5), // TODO: revisit this line
        readOnly: {{attributeType.isReadOnly}},
    ),
),
{{/if}}
{{#if page.isPageTypeUpdate}}
Observer(
    builder: (_) => JudoDateInput(
        key: inputWidgetKeyMap['{{ name }}'],
        col: {{ multiplyCol col }},
        row: {{ row }},
        disabled: {{ disabled }},
        initialDate: target{{ className page.dataElement.target.name }}Store.{{ attributeType.name }}
        label: '{{ label }}',
        icon: Icon(Icons.{{ this.leadingIcon.name }}),
        onChanged: (value) => target{{ className page.dataElement.target.name }}Store.set{{ className attributeType.name }}(value),
        firstDate: DateTime(DateTime.now().year - 5), // TODO: revisit this line
        lastDate: DateTime(DateTime.now().year + 5), // TODO: revisit this line
        readOnly: {{attributeType.isReadOnly}},
    ),
),
{{/if}}
