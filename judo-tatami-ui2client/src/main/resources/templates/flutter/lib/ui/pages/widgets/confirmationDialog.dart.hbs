{{ log 'Confirmation dialog generation for' (variable application.name) '-' (fqClass page.name)'page' (fqClass container.layoutType.name) level='debug' ~}}
//START confirmationDialog.dart.hbs---------------------------------------------------------------------------------------------------
{{# if action.isConfirmationTypeMandatory }}
bool confirmation = await judoConfirmationDialog(context: context, confirmationMessage: AppLocalizations.of(context).lookUpValue(context, '{{ action.confirmationMessage }}'));
if(!confirmation) {
    return{{# if action.operation.input }} false{{/ if }};
}
{{/ if }}
{{# if action.isConfirmationTypeConditional }}
if(targetStore.{{ variable action.confirmationCondition.name }}) {
    bool confirmation = await judoConfirmationDialog(context: context, confirmationMessage: AppLocalizations.of(context).lookUpValue(context, '{{ action.confirmationMessage }}'));
    if(!confirmation) {
        return{{# if action.operation.input }} false{{/ if }};
    }
}
{{/ if }}
//END confirmationDialog.dart.hbs---------------------------------------------------------------------------------------------------
