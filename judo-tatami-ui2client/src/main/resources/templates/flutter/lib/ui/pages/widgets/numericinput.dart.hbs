{{#if page.isPageTypeView}}
Observer(
    builder: (_) => JudoInputText(
        key: UniqueKey(),
        col: {{ col }},
        disabled: {{ disabled }},
        icon: Icon(Icons.{{ this.leadingIcon.name }}),
        label: '{{ label }}',
        initialValue: target{{ className page.dataElement.target.name }}Store.{{ attributeType.name }}.toString(),
        readOnly: true,
    )
),
{{/if}}
{{#if page.isPageTypeCreate}}
JudoInputText(
    col: {{ col }},
    disabled: {{ disabled }},
    icon: Icon(Icons.{{ this.leadingIcon.name }}),
    label: '{{ label }}',
    onChanged: (value) => target{{ className page.dataElement.target.name }}Store.set{{ className attributeType.name }}({{ dartType attributeType.dataType }}.parse(value)),
),
{{/if}}
{{#if page.isPageTypeUpdate}}
JudoInputText(
    col: {{ col }},
    disabled: {{ disabled }},
    icon: Icon(Icons.{{ this.leadingIcon.name }}),
    label: '{{ label }}',
    initialValue: target{{ className page.dataElement.target.name }}Store.{{ attributeType.name }}.toString(),
    onChanged: (value) => target{{ className page.dataElement.target.name }}Store.set{{ className attributeType.name }}({{ dartType attributeType.dataType }}.parse(value)),
),
{{/if}}
