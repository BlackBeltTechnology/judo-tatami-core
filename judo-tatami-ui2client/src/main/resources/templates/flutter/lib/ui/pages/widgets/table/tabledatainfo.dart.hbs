                    onTap: disabled ? null : () => deleteAction(target{{ className table.dataElement.target.name }}),
                  )
                : DataCell(
                    Text(''),
                  ),
                {{/if}}
                {{#if action.isCreateAction}}
                DataCell(
                    Icon(
                        Icons.{{action.icon.name}},
                        color: disabled ? kDisabledColor : null,
