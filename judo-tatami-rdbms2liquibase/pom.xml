<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.blackbelt.judo.tatami</groupId>
		<artifactId>judo-tatami-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../judo-tatami-parent</relativePath>
	</parent>

	<artifactId>judo-tatami-rdbms2liquibase</artifactId>
	<packaging>bundle</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<obrRepository>NONE</obrRepository>
					<instructions>
						<Export-Package>
							tatami/asm2rdbms;version=${project.version},
							hu.blackbelt.judo.tatami.asm2rdbms.*;version=${project.version}
						</Export-Package>
						<Include-Resource>
							{maven-resources},
							tatami/asm2rdbms/transformations=src/transformations,
							tatami/asm2rdbms/operations=src/operations,
							tatami/asm2rdbms/model=model</Include-Resource>
						<Import-Package>
							!lombok,
							meta/rdbms;version="${judo-meta-rdbms.import-range}",
							meta/asm;version="${judo-meta-asm.import-range}",
							hu.blackbelt.judo.meta.rdbms*;version="${judo-meta-rdbms.import-range}",
							hu.blackbelt.judo.meta.asm*;version="${judo-meta-asm.import-range}",
							com.google.common.base;version="[14.0,30)",
							com.google.common.cache;version="[14.0,30)",
							com.google.common.collect;version="[14.0,30)",
							com.google.common.io;version="[14.0,30)",
							com.google.common.primitives;version="[14.0,30)",
							com.google.common.hash;version="[14.0,30)",
							com.google.common.util.concurrent;version="[14.0,30)",
							javax.annotation;version="[1.0,2)",
							*
						</Import-Package>
						<Rdbms-Meta-Version-Range>${judo-meta-rdbms.import-range}</Rdbms-Meta-Version-Range>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>hu.blackbelt.judo.meta</groupId>
			<artifactId>judo-meta-rdbms-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>hu.blackbelt.judo.tatami</groupId>
			<artifactId>judo-tatami-core</artifactId>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>rdbms2liquibase-development</id>
			<build>
				<plugins>
					<plugin>
						<groupId>hu.blackbelt.epsilon</groupId>
						<artifactId>epsilon-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>transform-hsqldb</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<metaModels>
										<metaModel>mvn:hu.blackbelt.judo.meta:judo-meta-rdbms-model:ecore:rdbms:${judo-meta-rdbms.version}</metaModel>
									</metaModels>
									<models>
										<model>
											<artifact>mvn:${test.rdbms.model.groupId}:${test.rdbms.model.artifactId}:model:lsm-rdbmsHsqldb:${test.rdbms.model.version}</artifact>
											<name>RDBMS</name>
											<readOnLoad>true</readOnLoad>
											<storeOnDisposal>false</storeOnDisposal>
											<metaModelUris>
												<param>http://blackbelt.hu/judo/meta/psm/rdbms</param>
											</metaModelUris>
										</model>
									</models>
									<xmlModels>
										<xmlModel>
                                            <artifact>file:${project.build.directory}/liquibase-hsqldb-changelog.xml</artifact>
											<name>LIQUIBASE</name>
											<readOnLoad>false</readOnLoad>
											<storeOnDisposal>true</storeOnDisposal>
											<xsd>${basedir}/model/liquibase.xsd</xsd>
										</xmlModel>
									</xmlModels>
									<eolPrograms>
										<Etl>
											<source>${basedir}/src/transformations/rdbmsToLiquibase.etl</source>
											<parameters>
												<parameter>
													<name>extendedMetadataURI</name>
													<value>http://blackbelt.hu/judo/meta/ExtendedMetadata</value>
												</parameter>
												<parameter>
													<name>dialect</name>
													<value>hsqldb</value>
												</parameter>
											</parameters>
										</Etl>
									</eolPrograms>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>xml-maven-plugin</artifactId>
						<version>1.0.2</version>
						<executions>
							<execution>
								<id>fixing-namespace</id>
								<phase>compile</phase>
								<goals>
									<goal>transform</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<transformationSets>
								<transformationSet>
									<dir>${project.build.directory}</dir>
									<includes>*.xml</includes>
									<stylesheet>model/fixnamespace.xsl</stylesheet>
								</transformationSet>
							</transformationSets>
						</configuration>
						<dependencies>
							<!-- https://mvnrepository.com/artifact/net.sf.saxon/Saxon-HE -->
							<dependency>
							    <groupId>net.sf.saxon</groupId>
							    <artifactId>Saxon-HE</artifactId>
							    <version>9.9.0-1</version>
							</dependency>
						</dependencies>
					</plugin>

					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>3.6.3</version>
						<executions>
							<execution>
								<id>test-hsqldb</id>
								<phase>compile</phase>
								<goals><goal>update</goal></goals>								
								<configuration>
									<changeLogFile>
										${project.build.directory}/generated-resources/xml/xslt/liquibase-hsqldb-changelog.xml
									</changeLogFile>
									<driver>org.hsqldb.jdbc.JDBCDriver</driver>
									<url>jdbc:hsqldb:mem:mymemdb</url>
									<username>sa</username>
									<password></password>
								</configuration>
							</execution>
						</executions>						
						<dependencies>
							<dependency>
							    <groupId>org.hsqldb</groupId>
							    <artifactId>hsqldb</artifactId>
							    <version>2.3.2</version>
							</dependency>						
						</dependencies>
					</plugin>

					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>3.0.0</version>
						<executions>
							<execution>
								<id>add-resource</id>
								<goals>
									<goal>add-resource</goal>
								</goals>

								<configuration>
									<resources>
										<resource>
											<directory>src</directory>
										</resource>
									</resources>
								</configuration>

							</execution>
