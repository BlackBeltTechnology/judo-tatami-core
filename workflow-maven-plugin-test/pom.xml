<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.blackbelt.judo.tatami</groupId>
		<artifactId>judo-tatami-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<artifactId>workflow-maven-plugin-test</artifactId>
	<packaging>jar</packaging>

	<name>Judo :: Tatami :: WorkflowMavenPlugin :: TEST</name>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<judo-tatami-version>${project.version}</judo-tatami-version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>hu.blackbelt.judo.tatami</groupId>
				<artifactId>judo-tatami-workflow-maven-plugin</artifactId>
				<version>1.0.0-SNAPSHOT</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>psm-default-workflow</goal>
						</goals>
						<configuration>
						    <psmModelDest>${basedir}/../judo-tatami-workflow/target/test-classes/northwind-psm.model/</psmModelDest>
							<!--  <asmModelScriptRoot>file:${basedir}/../judo-tatami-psm2asm/src/main/epsilon/transformations/asm/</asmModelScriptRoot>
							<measureModelScriptRoot>file:${basedir}/../judo-tatami-psm2measure/src/main/epsilon/transformations/measure/</measureModelScriptRoot>
							<openApiModelScriptRoot>file:${basedir}/../judo-tatami-asm2openapi/src/main/epsilon/transformations/openapi/</openApiModelScriptRoot>
							<rdbmsModelScriptRoot>file:${basedir}/../judo-tatami-asm2rdbms/src/main/epsilon/transformations/</rdbmsModelScriptRoot>
							<liquibaseModelScriptRoot>file:${basedir}/../judo-tatami-rdbms2liquibase/src/main/epsilon/transformations/</liquibaseModelScriptRoot>
							<excelModelURI>file:${basedir}/../judo-tatami-asm2rdbms/model/</excelModelURI> -->
							<destination>${basedir}/target/test-classes/</destination>
							<modelName>northwind</modelName>
							<dialect>hsqldb</dialect>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											hu.blackbelt.judo.tatami
										</groupId>
										<artifactId>
											judo-tatami-workflow-maven-plugin
										</artifactId>
										<versionRange>
											[1.0.0-SNAPSHOT,)
										</versionRange>
										<goals>
											<goal>psm-default-workflow</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
